{
  "TelegramBot": {
    "BotToken": "BOT_TOKEN",
    "WebhookUrl": "",
    "AdminUserIds": [123456789],
    "MaxMessageLength": 4096,
    "UseWebhook": false
  },
  "ConnectionStrings": {
    "PostgresConnection": "Host=localhost;Port=5432;Database=hw1_api_db;Username=postgres;Password=5432;"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.OpenSearch"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenSearch",
        "Args": {
          "nodeUris": "http://opensearch-node1:9200",
          "indexFormat": "hw1-api-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "typeName": "_doc"
        }
      }
    ],
    "Enrich": ["WithMachineName", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "HW1.Api"
    }
  }
}